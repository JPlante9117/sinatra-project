<h1><%=@type.capitalize%></h1>

<table id='types'>
    <tr>
        <th>
            Pok√©mon
        </th>
        <th>
            Number of<br><br>Entries
        </th>
        <th>
            Secondary<br><br>Typing
        </th>
        <th>
            Visit Page
        </th>
    </tr>
    <% @pokemon.each do |pokemon| %>
        <tr>
        <td>
            <%= pokemon.species %>
        </td>
        <td>
            <%= pokemon.entries.count %>
        </td>
        <td>
            <% if pokemon.type2 != "None" && pokemon.type2 != @type.capitalize%>
                <a href='/pokemon/types/<%=pokemon.type2.downcase%>'><%= pokemon.type2%></a>
            <% elsif pokemon.type2 != "None" && pokemon.type2 == @type.capitalize%>
                <a href='/pokemon/types/<%=pokemon.type1.downcase%>'><%= pokemon.type1%></a>
            <% else %>
                None
            <% end %>
        </td>
        <td>
            <a href='/pokemon/<%= pokemon.slug %>'><img src="https://i.ibb.co/DVjhVK0/visit.png" alt="visit" class="rounded-corners"></a>
        </td>
        </tr>
    <% end %>
</table>