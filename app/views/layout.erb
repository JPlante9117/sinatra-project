  <body>
    <div class="wrapper">
      <a href='/'><button>Home</button></a>
      <% if !logged_in? %>
        <a href='/login'><button>Login</button></a>
        <a href='/signup'><button>Create Account</button></a>
      <% else %>
        <a href='/pokemon'><button>View All Pok√©mon</button></a>
        <a href='/assistants'><button>View All Assistants</button></a>
        <a href='/entries'><button>View All Entries</button></a>
        <a href='/entries/new'><button>Make New Entry</button></a>
        <a href='/assistants/<%= current_user.slug %>'><button>My Account</button></a>
        <a href='/logout'><button>Logout</button></a>
      <% end %>

      <% if flash[:message] %>
        <br><br>
        <font color="red"><%= flash[:message]%></font>
        <br><br>
      <% end %>

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2019 <strong>SinatraProject</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
